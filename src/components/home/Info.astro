---
import { getLocale } from "../../i18n";
import { Icon } from "astro-icon/components";
const t = getLocale(Astro.url);
import { Image } from "astro:assets";
import cat from "../../assets/img/cat-cutted.webp";
---

<section>
  <div class="container emfont-MaokenAssortedSansTC">
    <h2 class="emfont-UnboundedSans" id="info">
      {t.components.home.info.title}
    </h2>
    <div class="info-container">
      <div class="info">
        <h3>{t.components.home.info.event.title}</h3>
        <div class="content">
          {t.components.home.info.event.text[0]}<span
            >{t.components.home.info.event.text[1]}</span
          >
        </div>
        <div class="image">
          <Icon
            name="material-symbols:calendar-today-rounded"
            size={50}
          />
        </div>
      </div>
      <div class="info">
        <h3>{t.components.home.info.signup.title}</h3>
        <div class="content">
          {t.components.home.info.signup.text[0]}<span
            >{t.components.home.info.signup.text[1]}</span
          >
        </div>
        <div class="image">
          <Icon name="material-symbols:schedule" size={50} />
        </div>
      </div>
      <div class="info">
        <h3>{t.components.home.info.place.title}</h3>
        <div class="content">
          {t.components.home.info.signup.text}
        </div>
        <div class="image">
          <Icon name="material-symbols:navigation" size={50} />
        </div>
      </div>
    </div>
    <div class="info-container2">
      <div class="price-box">
        <div class="price-container">
          <div class="people">
            {t.components.home.info.price.early.title}
          </div>
          <img src="" alt="" class="icon" />
          <div class="price">
            {t.components.home.info.price.early.price}
          </div>
        </div>
        <div class="price-container">
          <div class="people">
            {t.components.home.info.price.personal.title}
          </div>
          <img src="" alt="" class="icon" />
          <div class="price">
            {t.components.home.info.price.personal.price}
          </div>
        </div>
        <div class="price-container">
          <div class="people">
            {t.components.home.info.price.dual.title}
          </div>
          <img src="" alt="" class="icon" />
          <div class="price">
            {t.components.home.info.price.dual.price}
          </div>
        </div>
        <div class="price-container">
          <div class="people">
            {t.components.home.info.price.tri.title}
          </div>
          <img src="" alt="" class="icon" />
          <div class="price">
            {t.components.home.info.price.tri.price}
          </div>
        </div>
        <div class="price-container">
          <div class="people">
            {t.components.home.info.price.quad.title}
          </div>
          <img src="" alt="" class="icon" />
          <div class="price">
            {t.components.home.info.price.quad.price}
          </div>
        </div>
      </div>
      <div class="signUp">
        <Image src={cat} alt="" />
        <a href="">{t.components.home.info.price.signupNow}</a>
      </div>
    </div>
    <div class="calendar">
      <div>{t.components.home.info.calendar.title}</div>
      <a href=""
        ><img src="" alt="" />{
          t.components.home.info.calendar.text
        }</a
      >
    </div>
    <div class="reminder">
      <h3>{t.components.home.info.reminder.title}</h3>
      <ol class="emfont-LXGWMarkerGothic">
        <li>{t.components.home.info.reminder.overFive}</li>
        <li>{t.components.home.info.reminder.beforeOneNight}</li>
        <li>
          {t.components.home.info.reminder.earlyBird}
        </li>
        <li>
          {t.components.home.info.reminder.groupDisclaimer[0]}<a
            href="https://drive.google.com/file/d/1nxt-lYWAMnsK-QbwbbeIV7lTi9hcimTw/view"
            >{t.components.home.info.reminder.groupDisclaimer[1]}</a
          >。
        </li>
        <li>
          {t.components.home.info.reminder.targetCount}
        </li>
        <li>
          {t.components.home.info.reminder.selected}
        </li>
        <li>
          {t.components.home.info.reminder.payBeforeEnter[0]}<a
            href="https://drive.google.com/file/d/1g6OSBT0yZIpOjKk5tkzgFOv-mcpBrPLd/view"
            >{t.components.home.info.reminder.payBeforeEnter[1]}</a
          >。
        </li>
        <li>
          {t.components.home.info.reminder.refund[0]}<a
            href="https://drive.google.com/file/d/1A193ekw7DtCgfMmxsICeT4gO2pWYGd4q/view"
            >{t.components.home.info.reminder.refund[1]}</a
          >。
        </li>
      </ol>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #4b61f5;
  }

  .info-container {
    display: flex;
    gap: 3rem;
    color: #000;
    margin-bottom: 7rem;
  }

  .info {
    background-color: #fff200;
    padding: 2rem 2rem 4rem;
    border-radius: 0 2rem 0 0;
    position: relative;
  }

  .info h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .info .content {
    font-size: 2.375rem;
  }

  .image {
    position: absolute;
    bottom: -6rem;
    right: -5rem;
    transform: translate(-50%, -50%);
    background-color: #000;
    color: #fff;
    width: 6rem;
    height: 6rem;
    font-size: 3rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .price-box {
    background-color: #fff;
    color: #736d6d;
  }
  .info-container2 {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6rem;
  }
  .price-box {
    padding: 0 3rem;
  }

  .price-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 2rem 0;
    font-size: 1.7rem;
    border-bottom: 1px solid #736d6d;
  }

  .price-container:last-child {
    border-bottom: none;
  }
  .people {
    color: #43a7ff;
  }

  .price {
    margin-left: 10rem;
  }

  .calendar {
    margin: 5rem 0;
    color: #fff;
    font-size: 1.5rem;
    background-color: #4115b7;
    display: flex;
    justify-content: space-between;
    padding: 2rem;
    border-radius: 0.5rem;
  }

  .reminder {
    line-height: 2;
  }
  .reminder h3 {
    font-size: 2.6875rem;
    margin-bottom: 1rem;
  }
  .signUp img {
    display: block;
    width: 15rem;
    height: auto;
    transform: translateY(10%);
    z-index: 1;
    position: relative;
  }
  .signUp a {
    border-radius: 0.9375rem;
    border: 8px solid #43a7ff;
    background: #fff;
    padding: 2rem 4rem;
    color: #43A7FF;
    z-index: 2;
    position: relative;
  }
</style>
