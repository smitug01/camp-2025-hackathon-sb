---
import ocfLogo from "../../assets/img/sponsors/ocf.png";
import nycuCsClubLogo from "../../assets/img/sponsors/nycuCsClub.png";
import nycuCsLogo from "../../assets/img/sponsors/nycuCs.png";
import itsaLogo from "../../assets/img/sponsors/itsa.png";
import sitconLogo from "../../assets/img/sponsors/sitcon.svg";
import { Image } from "astro:assets";
import { getLocale } from "../../i18n";

const t = getLocale(Astro.url);
---

<section class="container">
  <h3>{t.components.home.host.organize}</h3>
  <div class="host-container">
    <div class="host-item">
      <div class="host-logo">
        <Image src={sitconLogo} alt="SITCON logo" loading="lazy" />
      </div>
      <div class="host-name">
        {t.components.home.host.hosts.sitcon}
      </div>
    </div>
    <div class="host-item">
      <div class="host-logo">
        <Image
          src={ocfLogo}
          alt="開放文化基金會 logo"
          loading="lazy"
        />
      </div>
      <div class="host-name">{t.components.home.host.hosts.ocf}</div>
    </div>
    <div class="host-item">
      <div class="host-logo nctu-cs-club">
        <Image
          src={nycuCsClubLogo}
          alt="陽明交通大學資訊工程系學會 logo"
          loading="lazy"
        />
      </div>
      <div class="host-name">
        {t.components.home.host.hosts.nycuCsClub}
      </div>
    </div>
    <div class="host-item">
      <div class="host-logo">
        <Image
          src={nycuCsLogo}
          alt="陽明交通大學資訊工程系 logo"
          loading="lazy"
        />
      </div>
      <div class="host-name">
        {t.components.home.host.hosts.nycuCs}
      </div>
    </div>
  </div>
  <h3>{t.components.home.host.sponsor}</h3>
  <div class="host-container">
    <div class="host-item">
      <div class="host-logo">
        <Image src={itsaLogo} alt="ITSA logo" loading="lazy" />
      </div>
      <div class="host-name">{t.components.home.host.hosts.itsa}</div>
    </div>
  </div>
</section>

<style>
  section {
    text-align: center;
    padding-bottom: 0;
  }

  h3 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .host-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .host-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    width: 220px;
  }

  .host-logo {
    width: 212px;
    height: 127px;
    border-radius: 30px;
    background: #fff;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .host-logo.nctu-cs-club {
    background: #730302;
  }

  .host-logo img {
    width: 188.3px;
    height: 113.149px;
    flex-shrink: 0;
    object-fit: contain;
    display: block;
  }

  .host-name {
    font-size: 1.2rem;
    font-weight: 500;
    width: 100%;
    text-align: center;
    word-wrap: break-word;
    hyphens: auto;
  }

  @media (max-width: 768px) {
    .host-container {
      gap: 1.5rem;
    }

    .host-item {
      width: 180px;
    }

    .host-logo {
      width: 180px;
      height: 110px;
    }

    .host-logo img {
      width: 160px;
      height: 96px;
    }

    .host-name {
      font-size: 1rem;
    }
  }
</style>
