---
import { getLocale } from "../../i18n";
import { Image } from "astro:assets";

// 引入圖片
import mainCourse from "../../assets/img/index/course/Image-3.png";
import hackathon from "../../assets/img/index/course/Image-4.png";
import broadCourse from "../../assets/img/index/course/Image-5.png";
import worldCafe from "../../assets/img/index/course/Image-6.png";
import openSource from "../../assets/img/index/course/Image-7.png";
import challenge from "../../assets/img/index/course/Image-8.png";

const t = getLocale(Astro.url);
---

<section class="container">
  <div class="course-container">
    <div class="content">
      <h3>{t.components.home.course.main.title}</h3>
      <p>
        {t.components.home.course.main.text[0]}
      </p>
      <p>
        {t.components.home.course.main.text[1]}
      </p>
    </div>

    <Image
      src={mainCourse}
      alt="主線課程"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="course-container">
    <div class="content">
      <h3>Hackathon</h3>
      <p>
        {t.components.home.course.hackathon.text}
      </p>
    </div>

    <Image
      src={hackathon}
      alt="Hackathon"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="course-container">
    <div class="content">
      <h3>{t.components.home.course.broad.title}</h3>
      <p>{t.components.home.course.broad.text}</p>
    </div>

    <Image
      src={broadCourse}
      alt="廣度課程"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="course-container">
    <div class="content">
      <h3>{t.components.home.course.cafe.title}</h3>
      <p>
        {t.components.home.course.cafe.text}
      </p>
    </div>

    <Image
      src={worldCafe}
      alt="視界咖啡館"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="course-container">
    <div class="content">
      <h3>{t.components.home.course.openSource.title}</h3>
      <p>
        {t.components.home.course.openSource.text}
      </p>
    </div>

    <Image
      src={openSource}
      alt="開源精神與社群"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>

  <div class="course-container">
    <div class="content">
      <h3>{t.components.home.course.challenge.title}</h3>
      <p>
        {t.components.home.course.challenge.text[0]}
      </p>
      <p>
        {t.components.home.course.challenge.text[1]}
      </p>
    </div>

    <Image
      src={challenge}
      alt="資訊技能樹"
      width="400"
      height="300"
      loading="lazy"
    />
  </div>
</section>

<style>
  .course-container {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
  }

  /* 主線課程特定樣式 */
  .course-container:first-child {
    /* background-color: #6c6c6c; */
    color: white;
  }

  /* Hackathon特定樣式 */
  .course-container:nth-child(2)::before {
    background-color: #dfff60;
    /* 將SVG路徑轉換為clip-path */
    clip-path: polygon(
      0% 43.7%,
      3.5% 0%,
      3.5% 26.6%,
      34.5% 15.3%,
      97.5% 26.6%,
      100% 59.7%,
      97.5% 100%,
      52.6% 73.4%,
      4.7% 81.1%,
      0% 43.7%
    );
    padding: 3rem 3rem;
    position: relative;
    z-index: 1;
    margin-top: 0;
    margin-bottom: 0;
    width: 1304px;
  }

  /* 廣度課程特定樣式 */
  .course-container:nth-child(3)::before {
    background-color: #ffffff;
    width: 1200px;
    height: 473px;
    max-width: 100%;
    display: flex;
    align-items: center;
    position: relative;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-left: auto;
    margin-right: auto;
    margin-top: 0;
    margin-bottom: 0;
  }

  /* 視界咖啡館特定樣式 */
  .course-container:nth-child(4)::before {
    background-color: #f8a349;
    /* 將SVG路徑轉換為clip-path */
    clip-path: polygon(
      5.9% 100%,
      /* 76 360 */ 0% 8.5%,
      /* 0 30.5 */ 98% 0.1%,
      /* 1256.5 0.5 */ 100% 100% /* 1282 360 */
    );
    padding: 3rem 2.5rem;
    position: relative;
    z-index: 1;
    margin-top: 0;
    margin-bottom: 0;
    height: 360px;
    max-width: 100%;
  }

  /* 開源精神與社群特定樣式 */
  .course-container:nth-child(5)::before {
    background-color: #2fbcd8;
    /* 將SVG路徑轉換為clip-path */
    clip-path: polygon(
      0% 95.9%,
      /* 0 460.5 */ 1.8% 0%,
      /* 22.009 0 */ 2.45% 23.6%,
      /* 30.0123 113.5 */ 52.2% 27%,
      /* 638.761 129.5 */ 100% 20.7%,
      /* 1224 99.5 */ 100% 100%,
      /* 1224 480 */ 52.2% 89.4%,
      /* 638.761 429 */ 0% 95.9% /* 0 460.5 */
    );
    padding: 3rem 2.5rem;
    position: relative;
    z-index: 1;
    margin-top: 0;
    margin-bottom: 0;
    height: 480px;
    max-width: 100%;
  }

  /* 資訊技能樹特定樣式 */
  .course-container:nth-child(6)::before {
    background-color: #2659ce;
    /* 將SVG路徑轉換為clip-path */
    clip-path: polygon(
      0% 95.8%,
      /* 0 461 */ 1.8% 0.1%,
      /* 22 0.5 */ 1.8% 23.4%,
      /* 22 112.5 */ 52.2% 27%,
      /* 638.5 130 */ 100% 20.8%,
      /* 1223.5 100 */ 100% 99.9%,
      /* 1223.5 480.5 */ 52.2% 92.6%,
      /* 638.5 445.5 */ 0% 95.8% /* 0 461 */
    );
    padding: 3rem 2.5rem;
    position: relative;
    z-index: 1;
    margin-top: 0;
    margin-bottom: 0;
    height: 481px;
    max-width: 100%;
  }

  .course-container:nth-child(odd) {
    flex-direction: row-reverse;
  }

  .content {
    flex: 1;
  }

  img {
    flex: 0 0 40%;
    border-radius: 0.5rem;
    display: block;
    object-fit: cover;
  }

  h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--textColor, #333);
  }

  @media (max-width: 768px) {
    .course-container {
      flex-direction: column;
      align-items: center;
    }

    .course-container:nth-child(odd) {
      flex-direction: column;
    }
  }
</style>
