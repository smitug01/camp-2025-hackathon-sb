---
import { getLocale } from "../../i18n";

const t = getLocale(Astro.url);
---

<section class="container">
  <div class="about">
    <h3 id="coc">{t.components.home.about.aboutSitcon}</h3>
    <p>
      {t.components.home.about.sitconIs}
    </p>
    <a href={l("/about")}>{t.common.learnMore}</a>
  </div>
  <div class="about">
    <h3>Code of Conduct</h3>
    <p>
      {t.components.home.about.cocText}
    </p>
    <a href={l("/coc")}>{t.common.learnMore}</a>
  </div>
</section>

<style>
  .container {
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 3rem;
    justify-content: center;
  }

  .about {
    position: relative;
    max-width: 85%;
    padding: 40px 60px;
    z-index: 1;
    margin: 0 auto;
    color: #000;
  }

  .about::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ebeb39;
    transform: skewX(-10deg); /* 斜背景 */
    z-index: -1;
    box-shadow: var(--shadow);
  }

  @media (max-width: 768px) {
    .about::before {
      transform: skewX(-3deg); 
    }
    
  }

  h3 {
    font-weight: bold;
    font-size: 38px;
    margin-bottom: 23px;
  }

  p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  a {
    display: inline-block;
    font-weight: bold;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    padding: 0.7rem 1.2rem;
    font-size: 1.2rem;
    float: right;
    transition: all 0.3s ease;
  }

  a:hover {
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  }
</style>
