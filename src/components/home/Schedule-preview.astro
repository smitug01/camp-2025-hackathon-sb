---
import { getLocale } from "../../i18n";

const t = getLocale(Astro.url);
---

<section class="container">
  <h2 class="emfont-UnboundedSans" id="schedule">{t.components.home.schedulePreview.title}</h2>
  <div class="schedule-preview">
    {t.components.home.schedulePreview.courses.map((k)=>{
      return (<div class="course">{k}</div>)
    })}
  </div>
  <div class="await">{t.components.home.schedulePreview.comingSoon}</div>
</section>

<style>
  .container {
    padding: 2rem 0;
    text-align: center;
  }

  h2 {
    margin-bottom: 2rem;
    text-align: center;
  }

  .schedule-preview {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .course {
    background-color: #FFF;
    color: #000;
    font-size: 1.5rem;
    font-weight: 500;
    border-radius: 28px 0 28px 0;
    padding: 1rem;
    width: calc(33.33% - 1rem);
    box-sizing: border-box;
    min-width: 180px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 80px;
  }

  .await {
    margin-top: 2rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .course {
      width: calc(50% - 1rem);
    }
  }

  @media (max-width: 480px) {
    .course {
      width: calc(100% - 1rem);
      margin: 0 20px;
    }

</style>
