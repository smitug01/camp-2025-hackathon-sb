---
import { Image } from "astro:assets";
import image from "../../assets/img/image.webp";
import { getLocale } from "../../i18n";

const t = getLocale(Astro.url);
---

<section>
  <div>
    <h2 class="emfont-UnboundedSans">
      {t.components.home.intro.title}
    </h2>
    <div>{t.components.home.intro.subtitle}</div>
    <p>
      {t.components.home.intro.text[0]}
    </p>
    <p>
      {t.components.home.intro.text[1]}
    </p>
    <p>
      {t.components.home.intro.text[1]}
    </p>
  </div>
  <div class="image-container">
    <Image
      src={image}
      alt="課程照片"
      class="image"
      width="400"
      loading="lazy"
    />
  </div>
</section>

<style>
  section {
    max-width: var(--maxWidth);
    margin: auto;
    padding: 3rem 2rem;
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  h2 + div {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .image-container {
    flex-shrink: 0;
    position: relative;
  }

  img {
    transform: rotate(0.774deg);
    border-radius: 1.5rem 0rem;
    max-width: 100%;
    height: auto;
  }

  .image-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f3eb01;
    z-index: -1;
    border-radius: 0rem 1.5rem;
    box-shadow: var(--shadow);
    transform: rotate(-4.613deg);
  }

  p {
    margin-bottom: 1rem;
  }

  /* Responsive styles */
  @media (max-width: 1200px) {
    section {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .image-container {
      margin: 1.5rem auto;
      width: 70%;
      max-width: 400px;
    }
  }

  @media (max-width: 992px) {
    section {
      padding: 2.5rem 1.5rem;
    }
    
    h2 + div {
      font-size: 1.75rem;
    }

    .image-container {
      width: 80%;
    }
  }

  @media (max-width: 768px) {
    section {
      text-align: center;
    }

    .image-container {
      width: 90%;
    }
  }

  @media (max-width: 576px) {
    section {
      padding: 2rem 1rem;
    }
    
    h2 + div {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .image-container {
      width: 100%;
    }
  }
</style>
