---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getLocale } from "../i18n";

const t = getLocale(Astro.url);
---

<!-- 
  Footer component for SITCON Camp 2025 website
  Contains:
  - Organization name and contact info
  - Social media links
  - Links to previous SITCON camp websites
-->
<footer>
  <!-- Background with clip-path -->
  <div class="footer-bg"></div>

  <div class="footer-container">
    <!-- Left section: Organization info and contact details -->
    <div class="footer-left">
      <h3>
        學生計算機年會<br />
        Students' Information Technology<br />
        Conference
      </h3>
      <div class="contact">
        <h3>{t.components.footer.contact.title}</h3>
        <p>
          {t.components.footer.contact.cooperation}
          <a href="mailto:contact@sitcon.org">contact@sitcon.org</a>
        </p>
        <p>
          {t.components.footer.contact.signup}
          <a href="mailto:ask@sitcon.camp">ask@sitcon.camp</a>
        </p>
      </div>
    </div>
    <div class="footer-right">
      <div class="social-media">
        <h3>{t.components.footer.contact.social}</h3>
        <div class="social-icons">
          <a
            href="https://www.facebook.com/SITCONtw/"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:facebook" size={28} />
          </a>
          <a
            href="https://www.instagram.com/sitcon.tw/"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:instagram" size={28} />
          </a>
          <!-- Flickr -->
          <a
            href="https://www.flickr.com/photos/sitcon"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:flickr" size={28} />
          </a>
          <!-- Telegram -->
          <a
            href="https://telegram.me/SITCONgeneral"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:telegram" size={28} />
          </a>
          <!-- Twitter/X -->
          <a
            href="https://x.com/sitcontw"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:x" size={28} />
          </a>
          <!-- YouTube -->
          <a
            href="https://www.youtube.com/c/SITCONArchive"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:youtube" size={28} />
          </a>
          <!-- Plurk -->
          <a
            href="https://www.plurk.com/SITCON"
            target="_blank"
            class="social-icon"
          >
            <Icon name="simple-icons:plurk" size={28} />
          </a>
        </div>
      </div>
      <!-- Previous websites section with year links -->
      <div class="previous-websites">
        <h3>{t.components.footer.contact.previous}</h3>
        <div class="year-links">
          <a
            href="https://sitcon.camp/2024"
            target="_blank"
            class="year-link">2024</a
          >
          <a
            href="https://sitcon.camp/2023"
            target="_blank"
            class="year-link">2023</a
          >
          <a
            href="https://sitcon.camp/2021"
            target="_blank"
            class="year-link">2021</a
          >
          <a
            href="https://sitcon.camp/2019"
            target="_blank"
            class="year-link">2019</a
          >
          <a
            href="https://sitcon.camp/2017"
            target="_blank"
            class="year-link">2017</a
          >
          <a
            href="https://sitcon.camp/2016"
            target="_blank"
            class="year-link">2016</a
          >
          <a
            href="https://sitcon.camp/2015"
            target="_blank"
            class="year-link">2015</a
          >
          <a
            href="https://sitcon.camp/2014"
            target="_blank"
            class="year-link">2014</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Main footer styles with clip-path background */
  footer {
    color: var(--text-white, #e7fbff);
    position: relative;
    padding: 5rem 0 2rem;
  }
  /* Background using clip-path instead of SVG */
  .footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-color: #023249;
    clip-path: polygon(
      7vw 0,
      0 10vw,
      0 100%,
      100% 100%,
      100% 5vw,
      90vw 0,
      10vw 0
    );
  }

  /* Container with max width and centered content */
  .footer-container {
    max-width: var(--maxWidth, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }

  /* Heading styles for all h3 elements */
  h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  /* Left column styles */
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Contact section paragraph spacing */
  .contact p {
    margin-bottom: 0.5rem;
  }

  /* Link styles with hover effects */
  a {
    color: var(--text-white, #e7fbff);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Right column styles */
  .footer-right {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Social media icons container */
  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Individual social icon styles with hover animation */
  .social-icon {
    display: block;
    transition: transform 0.2s ease;
  }

  .social-icon:hover {
    transform: scale(1.1);
  }

  /* Previous websites links container */
  .year-links {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  /* Year link styles */
  .year-link {
    font-size: 1.25rem;
    text-decoration: underline;
  }

  .year-link:hover {
    text-decoration: none;
  }

  /* Responsive design for mobile devices */
  @media (max-width: 768px) {
    footer {
      padding-top: 4rem;
    }

    .footer-container {
      display: block;
      padding: 0 2rem;
      margin: 0;
    }

    h3 {
      font-size: 1.25rem;
    }

    .social-icons {
      gap: 0.75rem;
    }

    .year-links {
      gap: 1rem;
    }

    .year-link {
      font-size: 1.1rem;
    }
    .contact {
      margin-bottom: 2rem;
    }
  }
</style>
