<style>
  /* Main footer styles with SVG background */
  footer {
    color: var(--text-white, #E7FBFF);
    position: relative;
    padding: 5rem 0 2rem;
    /* Remove clip-path as we're using SVG background */
  }

  /* SVG background positioning */
  .footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .footer-bg svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  /* Container with max width and centered content */
  .footer-container {
    max-width: var(--maxWidth, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }

  /* Heading styles for all h3 elements */
  h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  /* Left column styles */
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Contact section paragraph spacing */
  .contact p {
    margin-bottom: 0.5rem;
  }

  /* Link styles with hover effects */
  a {
    color: var(--text-white, #E7FBFF);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Right column styles */
  .footer-right {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Social media icons container */
  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Individual social icon styles with hover animation */
  .social-icon {
    display: block;
    transition: transform 0.2s ease;
  }

  .social-icon:hover {
    transform: scale(1.1);
  }

  /* Previous websites links container */
  .year-links {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  /* Year link styles */
  .year-link {
    font-size: 1.25rem;
    text-decoration: underline;
  }

  .year-link:hover {
    text-decoration: none;
  }

  /* Responsive design for mobile devices */
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
    }
  }
</style>
