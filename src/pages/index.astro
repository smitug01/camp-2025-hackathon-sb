---
import Layout from "../layouts/index.astro";
import Hero from "../components/home/Hero.astro";
import Schema from "../components/home/Schema.astro";
import Intro from "../components/home/Intro.astro";
import Info from "../components/home/Info.astro";
import Schedule from "../components/home/Schedule.astro"; // Updated to full schedule with modal
import Course from "../components/home/Course.astro";
import PastEvent from "../components/home/PastEvent.astro";
import Feedback from "../components/home/Feedback.astro";
import About from "../components/home/About.astro";
import Host from "../components/home/Host.astro";
import { getLocale } from "../i18n";
const t = getLocale(Astro.url);
---

<Layout
  title={t.components.home.content.title}
  description={t.components.home.content.text}
>
  <Schema />
  <Hero />
  <Intro />
  <Schedule />
  <Course />
  <PastEvent />
  <Feedback />
  <Info />
  <About />
  <Host />
</Layout>
