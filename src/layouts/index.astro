---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import ogImage from "../assets/img/og.webp";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const customTransition = {
  forwards: {
    old: {
      name: "transitionFadeOut",
      duration: "0.2s",
      easing: "ease-in",
    },
    new: {
      name: "transitionFadeIn",
      duration: "0.2s",
      easing: "ease-in",
    },
  },
  backwards: {
    old: {
      name: "transitionFadeOut",
      duration: "0.2s",
      easing: "ease-in",
    },
    new: {
      name: "transitionFadeIn",
      duration: "0.2s",
      easing: "ease-in",
    },
  },
};
---

<html lang="zh-Hant" transition:animate="none">
  <head>
    <meta charset="UTF-8" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta name="theme-color" content="#009DF3" />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />
    <meta property="og:title" content={Astro.props.title} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage.src} />
    <meta
      property="og:description"
      content={Astro.props.description}
    />
    <meta property="og:site_name" content="SITCON Camp" />

    <meta name="twitter:title" content={Astro.props.title} />
    <meta name="twitter:image" content={ogImage.src} />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" href="https://sitcon.camp/2025/favicon.ico" />

    <style
      is:global
      define:vars={{
        foregroundColor: "#FFF",
        backgroundColor: "#009DF3",
        maxWidth: "1200px",
        shadow: "0px 4px 39.3px 10px rgba(24, 70, 237, 0.52)",
      }}
    >
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: var(--backgroundColor);
        color: var(--foregroundColor);
        font-size: 1.25rem;
        scroll-behavior: smooth;
      }

      a {
        color: inherit;
      }

      h2 {
        font-size: clamp(2rem,4rem, 9vw);
        font-weight: 700;
        font-weight: 400;
        scroll-margin-top: 7rem;
      }

      p {
        line-height: 130%;
      }

      img {
        max-width: 100%;
      }

      .container {
        max-width: var(--maxWidth);
        padding: 4rem 2rem;
        margin: auto;
      }

      @keyframes transitionFadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      @keyframes transitionFadeOut {
        from {
          opacity: 1;
        }
        to {
          opacity: 0;
        }
      }
    </style>

    <ClientRouter />
  </head>
  <body
    class="emfont-LXGWMarkerGothic"
    transition:animate={customTransition}
  >
    <Nav transition:persist={true} />
    <slot />
    <Footer transition:persist={true} />
    <script src="../scripts/main.js"></script>
  </body>
</html>
