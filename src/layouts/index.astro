---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
  imageOverride?: string;
}

// TODO: Put og image to /public/opengraph/main.jpg
// TODO: Put favicon to /public/favicon.ico
---

<html lang="zh-Hant">
  <head>
    <meta charset="UTF-8" />

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta name="theme-color" content="#009DF3" />
    <title>{Astro.props.title}</title>
    <meta name="description" content={Astro.props.description} />

    <SEO
      title={Astro.props.title}
      description={Astro.props.description}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: Astro.props.title,
          type: "website",
          image:
            Astro.props.imageOverride ??
            "https://sitcon.camp/2025/opengraph/main.jpg",
        },
        optional: {
          description: Astro.props.description,
          siteName: "SITCON Camp",
        },
      }}
      twitter={{
        title: Astro.props.title,
        image:
          Astro.props.imageOverride ??
          "https://sitcon.camp/2025/opengraph/main.jpg",
        card: "summary_large_image",
      }}
      extend={{
        link: [
          {
            rel: "icon",
            href: "https://sitcon.camp/2025/favicon.ico",
          },
        ],
      }}
    />

    <style
      is:global
      define:vars={{
        foregroundColor: "#FFF",
        backgroundColor: "#009DF3",
        maxWidth: "1200px",
        shadow: "0px 4px 39.3px 10px rgba(24, 70, 237, 0.52)",
      }}
    >
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: var(--backgroundColor);
        color: var(--foregroundColor);
        font-size: 1.25rem;
      }

      a {
        color: inherit;
      }

      h2 {
        font-size: 4rem;
        font-weight: 700;
        font-weight: 400;
      }

      p {
        line-height: 130%;
      }

      img {
        max-width: 100%;
      }

      .container {
        max-width: var(--maxWidth);
        padding: 4rem 2rem;
        margin: auto;
      }
    </style>
  </head>
  <body class="emfont-LXGWMarkerGothic">
    <Nav />
    <slot />
    <Footer />
    <script src="../scripts/main.js"></script>
  </body>
</html>
